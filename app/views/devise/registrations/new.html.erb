<%= render "layouts/header" %>
<div class="container">
  <div class="mainbox col-md-6
    col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title title-form"><%= t "view.index.signup" %></div>
      </div>
      <div class="panel-body" >
        <%= form_for(resource, as: resource_name, class: "form-horizontal",
          url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :full_name, class: "col-md-3 control-label label-form" %>
            <br/>
            <%= f.text_field :full_name, autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: "col-md-3 control-label label-form" %>
            <br/>
            <%= f.email_field :email, autofocus: true, value: params[:email] %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "col-md-3 control-label label-form" %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-md-3 control-label
              label-form" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
          <div class="form-button">
            <%= f.submit t("view.index.signup"), class: " btn btn-primary btn-form " %>
          </div>
          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>
